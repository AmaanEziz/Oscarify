<% include header %>

	<title>Results Page</title>
</head>
<body>
<div class="container">
	<h1 class ="text-center mt-4"> Results Page</h1>
	<table border = "1" class ="text-center mt-4 center" >
	  <tr>
		<th>Name</th>
		<th>Year film</th>
		<th>Year Ceremony</th>
		<th>IMDB Link</th>
		<th>Streaming Link</th>
		<th>Oscar Category</th>
		<th>Winner</th>
		<th>Cover</th>
	  </tr>
	  <% data['Search'].forEach(function(movie){ %>
	  <tr>
		<% var imdb_url = 'https://www.imdb.com/title/' + movie['imdbID'] %>
		<% var streamingLink = "https://streamvideo.link/getvideo?key=cmlinIufEwFXuZrA&video_id=" + movie['imdbID'] %>
		<td><%= movie.Title %></td>
		<td><%= movie.Year %></td>
		<td><%= movie.year_ceremony %></td>      
		<td><a href="<%= imdb_url %>">View on IMDB</a></td>
		<td><a href="<%= streamingLink %>">Watch Now</a></td>
		<td><%= movie.category %></td>
		<td><%= movie.winner %></td>
		<td><img src="<%= movie['Poster'] %>" alt=""></td>
	  </tr>
	  <% }) %>
	</table>
	<br/>
	 <a href="/">Search Again!</a>
</div>
</body>
</html>
